<h4 id="notice" class='text-center text-success'><strong><%= notice %></strong></h4>

<div class='text-right'>
    Usuario: <strong><%= current_user.name %></strong> <%= link_to " SAIR", logout_path, method: "delete", class: "btn btn-default glyphicon glyphicon-log-out red" %>
    </div>
<hr />
<p class='text-right'>
    <a class='btn btn-danger' href='feeds'><i class="fa fa-rss"></i> Meus Feeds</a> 
    <a class='btn btn-warning' href='feeds/new'><i class="fa fa-plus"></i> Adicionar Feed</a></p>    

<% if logged_in? %>

    <%= render :partial => 'index', :locals => {:entries => @entries} %>

<% else %>
    <p>Entre no MyReader para visualizar seus feeds de noticias!</p>
<% end %>