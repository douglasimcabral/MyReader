<%= form_for(@feed) do |f| %>
  <% if @feed.errors.any? %>
    <div id="error_explanation">
      
<div class='alert alert-danger alert-dismissible' role='alert'>
  <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
  <h4><strong><%= pluralize(@feed.errors.count, 'erro') %>, favor corrigir:</strong></h4>
      <ul>
      <% @feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>  
</div>      
    </div>
  <% end %>

  <div class="field">
    <label for="feed_titulo">T&iacute;tulo</label><br />
    <%= f.text_field :title %>
  </div><br />
  <div class="field">
    <label for="feed_url">Url</label><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <input type="hidden" name="feed[user_id]" id="feed_user_id" value="<%= current_user.id %>">
  </div>
  <div class="actions">
    <br /><input type="submit" name="commit" value="Cadastrar" class='btn btn-danger' /> <a class='btn btn-default' href='..'>Cancelar</a>
  </div>
<% end %>