					 <label for="inputSenha">Nome</label>
					 <div class="input-group">
					 <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
					 <%= f.text_field :name, class: 'form-control' %>
					 </div>
				</div>			  
				<div class="form-group ">
					 <%= f.label :email %>
					 <div class="input-group">
